{
    "name": "sentry/sdk-playground-php",
    "description": "PHP SDK service for SDK Playground",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "sentry/sentry": "^4.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpunit/php-code-coverage": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-html coverage"
    }
}
